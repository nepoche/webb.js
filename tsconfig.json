{
  "exclude": [
    "build/**/*",
    "**/build/**/*",
    "scripts"
  ],
  "include": [
    "packages/**/*",
    "examples/*",
    "tests/**/*"
  ],
  "compilerOptions": {
    "types": ["mocha", "node"],
    "declaration": true,
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true, //
    "paths": {
      "@nepoche/api": [
        "packages/api/src"
      ],
      "@nepoche/api/*": [
        "packages/api/src/*"
      ],
      "@nepoche/types": [
        "packages/types/src"
      ],
      "@nepoche/types/*": [
        "packages/types/src/*"
      ],
      "@nepoche/type-definitions": [
        "packages/type-definitions/src"
      ],
      "@nepoche/type-definitions/*": [
        "packages/type-definitions/src/*"
      ],
      "@nepoche/sdk-core": [
        "packages/sdk-core/src"
      ],
      "@nepoche/sdk-core/*": [
        "packages/sdk-core/src/*"
      ],
      "@nepoche/app-util": [
        "packages/app-util/src"
      ],
      "@nepoche/app-util/*": [
        "packages/app-util/src/*"
      ],
      "@nepoche/wasm-utils": [
        "packages/wasm-utils/build"
      ],
      "@nepoche/wasm-utils/*": [
        "packages/wasm-utils/build/*"
      ],
      "@nepoche/api-providers": [
        "packages/api-providers/src"
      ],
      "@nepoche/api-providers/*": [
        "packages/api-providers/src/*"
      ]
    },

    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types"
    ]
  }
}
